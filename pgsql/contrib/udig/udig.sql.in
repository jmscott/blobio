/*
 *  Core SHA Comparison Operators
 */
CREATE OPERATOR =
(
	leftarg =		udig_sha,
	rightarg =		udig_sha,
	procedure =		udig_sha_eq,
	commutator =		=,
	negator =		<>,
	restrict =		eqsel,
	join =			eqjoinsel
);

CREATE OPERATOR <>
(
	leftarg =		udig_sha,
	rightarg =		udig_sha,
	procedure =		udig_sha_ne,
	commutator =		<>,
	negator =		=,
