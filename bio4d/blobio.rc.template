########################################################################

BLOBIO_ROOT=${BLOBIO_ROOT:=/usr/local/blobio}
export BLOBIO_ROOT

. /etc/sysconfig/rc
. ${rc_functions}
. $BLOBIO_ROOT/etc/profile.rc

case "${1}" in
	start)
		boot_mesg "Starting BlobIO bio4d daemon..."
		loadproc -p $BLOBIO_RC_BIO4D_PID_FILE $BLOBIO_RC_BIO4D
		;;

	stop)
		boot_mesg "Stopping BlobIO bio4d daemon..."
		killproc -p $BLOBIO_RC_BIO4D_PID_FILE $BLOBIO_RC_BIO4D
		;;

	restart)
		${0} stop
		sleep 1
		${0} start
		;;

	status)
		statusproc -p $BLOBIO_RC_BIO4D_PID_FILE $BLOBIO_RC_BIO4D
		;;

	*)
		echo "Usage: ${0} {start|stop|restart|status}"
		exit 1
		;;
esac

# End $rc_base/init.d/
